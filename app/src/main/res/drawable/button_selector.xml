<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/button_back_pressed" android:state_pressed="true">

        <scale android:background="@drawable/button_back_pressed" android:duration="1000" android:fromXScale="1" android:fromYScale="1" android:toXScale="2" android:toYScale="2" />

        <rotate android:background="@drawable/button_back_pressed" android:duration="1000" android:fromDegrees="0" android:pivotX="50%" android:pivotY="50%" android:toDegrees="359" />

    </item>
    <item android:drawable="@drawable/button_back_normal" />


</selector>